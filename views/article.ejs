<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet.css" />
  </head>
  <body>
    <div class="custom-div-class"></div>

    <header>
      <h1 class="align-heading">
        <%=author.first_name%> <%=author.last_name%>
      </h1>
    </header>
    <main>
      <article>
        <h2 class="align-heading"><%=title%></h2>
        <div class="post-content">
          <textarea
            id="userContent"
            name="userContent"
            rows="30"
            cols="600"
            maxlength="3000"
            required
            readonly
          >
<%= content%>

          </textarea>
        </div>
      </article>
    </main>

    <div class="comment-section">
      <div id="write-comment">
        <h3 id="info"></h3>
        <form id="comment-form" method="POST" action="/post/comment/<%=title%>">
          <input
            class="custom-search-bar"
            type="text"
            id="comment-space"
            placeholder="Write your comment here"
            name="content"
          />
          <button
            class="custom-button submit-comment-btn"
            id="submit-comment"
            type="submit"
          >
            Post comment
          </button>
        </form>
      </div>
      <div>
        <main>
          <ul>
            <% commentsArr.forEach(comment => { %>
            <div class="comments-div">
              <li style="list-style-type: none">
                <h4><%= comment.username %></h4>
                <h4><%= comment.content %></h4>
              </li>
            </div>
            <% }); %>
          </ul>
        </main>
      </div>
    </div>

    <a href="/signup.html" id=" signup-ref">
      <button class="custom-button sign-up-btn" id="signup">Sign up</button>
    </a>
    <a href="/login.html" id="login-ref">
      <button class="custom-button log-in-btn" id="login">Log in</button>
    </a>
    <a href="/index.html">
      <button class="custom-button btn-left">Home</button>
    </a>
    <script src="/scripts/login.js"></script>
    <script src="/scripts/comments.js"></script>
  </body>
</html>
