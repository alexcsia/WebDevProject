<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>" Results for<%= searchTerms %>"</title>
    <link rel="stylesheet" href="/stylesheet.css" />
  </head>
  <body>
    <div class="fullscreen-background"></div>
    <div class="center-div" id="search-results-menu-div">
      <header>
        <h1>Explore Our Blog</h1>
        <div class="center-div" id="nav">
          <a href="/index.html">
            <button class="custom-button">Home</button>
          </a>
          <a href="/signup.html" id="signup-ref" style="text-decoration: none">
            <button class="custom-button" id="signup">Sign up</button>
          </a>
          <a href="/login.html" id="login-ref">
            <button class="custom-button" id="login">Log in</button>
          </a>
          <a href="/about.html">
            <button class="custom-button">About</button>
          </a>
          <a
            href="/login.html"
            id="crt-post-ref"
            style="top: -64%; position: relative"
          >
            <button class="custom-button" id="create-post-btn">
              Create post
            </button>
          </a>
        </div>
      </header>
    </div>
    <!--displaying articles-->
    <div class="results-div">
      <main>
        <h2>Articles About "<%= searchedString %>"</h2>
        <h3>Search results: <%= articles.length %></h3>
        <ul>
          <% articles.forEach(function(article){ %>
          <div class="article-div">
            <li style="list-style-type: none">
              <a
                class="article"
                href="<%= `/search/articles/${article.title}`%>"
              >
                <%= article.title %>
              </a>
            </li>
          </div>
          <%}); %>
        </ul>
      </main>
    </div>

    <!--Script path-->
    <script src="/scripts/login.js"></script>
    <script src="/scripts/createPostBtn.js"></script>
  </body>
</html>
